<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:background="@drawable/colorful6"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".XuatKhoFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtMaHangXuat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mã mặt hàng "
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtTheLoaiXuatKho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Thể Loại"/>

        <EditText
            android:id="@+id/edtTenHangXuat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Tên hàng"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtGiaHangXuat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="giá"/>


        <EditText
            android:id="@+id/edtSoLuongXuat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Số lượng hàng"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtngayxuat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Ngày xuất kho"
                android:inputType="textPersonName" />

            <Button
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:textColor="@color/black"
                android:background="@drawable/bg_purple_conner_10"
                android:id="@+id/btnngayxuat"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Chọn ngày" />

        </LinearLayout>

        <LinearLayout
            android:padding="2dp"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:background="@drawable/bg_purple_conner_10"
                android:id="@+id/btnxuatkho"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xuất kho" />

            <Button
                android:background="@drawable/bg_purple_conner_10"
                android:id="@+id/btnHuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hủy" />

            <Button
                android:layout_marginLeft="5dp"
                android:background="@drawable/bg_purple_conner_10"
                android:id="@+id/btnSuaHangXuatKho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sửa" />
        </LinearLayout>
        <LinearLayout
            android:background="@color/ben_orange"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtFinDSNhapKho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8" />

            <Button
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:background="@drawable/bg_yellow_conner_30"
                android:id="@+id/btnFindDSNhapKho"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="tìm kiếm" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ListView
                android:id="@+id/lvFindDSNhapKho"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>




</FrameLayout>