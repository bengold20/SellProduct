<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".xuatkhoFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgkho"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/xuatkho" />

        <EditText
            android:id="@+id/edtmahang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mã mặt hàng "
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thể loại hàng :"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/sptheloaihang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edttenhang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Tên hàng"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtsoluong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Số lượng hàng"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtngayxuat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Ngày xuất kho"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btnngayxuat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn ngày"
                app:backgroundTint="#699CB3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnxuatkho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xuất kho"
                app:backgroundTint="#1E67A1" />

            <Button
                android:id="@+id/btnhuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hủy"
                app:backgroundTint="#1F94F1" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>