<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgTheLoai"
            android:layout_width="100dp"
            android:layout_height="69dp"
            android:src="@drawable/theloai" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtListviewTenTheLoai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tên thể loại"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtListviewMaTheLoai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mã thể loại" />

            <TextView
                android:id="@+id/txtListviewViTri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vị trí" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgXoaTheLoai"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:src="@drawable/delete" />

    </LinearLayout>

</LinearLayout>