<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="2dp"
        android:gravity="left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgTheLoai"
                android:layout_marginTop="10dp"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/theloai" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtListviewTenTheLoai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tên thể loại"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtListviewMaTheLoai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mã thể loại" />

            <TextView
                android:id="@+id/txtListviewViTri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vị trí" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgXoaTheLoaiXK"
            android:layout_width="30dp"
            android:layout_height="80dp"
            android:gravity="right"
            android:src="@drawable/delete" />

    </LinearLayout>

</LinearLayout>