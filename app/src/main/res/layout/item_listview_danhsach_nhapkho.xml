<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgLvNK"
            android:layout_width="100dp"
            android:layout_height="69dp"
            app:srcCompat="@drawable/background_login" />

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtLvTenHangNK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tên mặt hàng"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtLvTenTheLoaiNK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tên thể loại" />

            <TextView
                android:id="@+id/txtLvSoLuongNK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="số lượng " />
            <TextView
                android:id="@+id/txtLvGiaNK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="giá " />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgLvXoaNK"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/btnDelete" />
    </LinearLayout>
</LinearLayout>