<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgLvNK"
                android:layout_marginTop="10dp"
                android:layout_width="80dp"
                android:layout_height="69dp"
                app:srcCompat="@drawable/background_login2" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtLvTenHangNK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tên mặt hàng"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtLvTenTheLoaiNK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tên thể loại" />

            <TextView
                android:id="@+id/txtLvSoLuongNK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="số lượng " />
            <TextView
                android:id="@+id/txtLvGiaNK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="giá " />
        </LinearLayout>

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imgLvXoaNK"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/delete"  />
    </LinearLayout>
</LinearLayout>